      <texPath>Things/Item/Resource/AnimalProductRaw/EggBirdSmall</texPath>
      <color>(127,127,127)</color>
      <drawSize>1</drawSize>
    </graphicData>
	<statBases>
		<Beauty>2</Beauty>
		<Mass>2.25</Mass>
		<Flammability>0</Flammability>
		<MarketValue>25</MarketValue>
	</statBases>
	<stuffProps>
		<color>(127,127,127)</color>
		<commonality>0.1</commonality>
	</stuffProps>
  </ThingDef>

