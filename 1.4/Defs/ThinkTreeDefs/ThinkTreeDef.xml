          <subNodes>
            <li Class="ThinkNode_ConditionalIntelligence">
              <minIntelligence>ToolUser</minIntelligence>
              <subNodes>
                <li Class="JobGiver_JumpInWater" />
              </subNodes>
            </li>
            <li Class="JobGiver_ExtinguishSelf" />
