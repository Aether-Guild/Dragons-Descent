	<!--=========================== Dragon Statue Ritual Spot  ===============================-->
	
	<ThingDef ParentName="SculptureBase" Name="DD_DragonStatueRitual_Grand" MayRequire="Ludeon.RimWorld.Ideology">
		<defName>DD_DragonStatueRitual_Grand</defName>
		<label>Dragon Statue Ritual</label>
		<description>A spot for carrying out certain kinds of rituals.</description>
		<graphicData>
		  <texPath>Things/Building/Art/SculptureGrand/sculpturegranddraconica</texPath>
		  <graphicClass>Graphic_Single</graphicClass>
		  <drawSize>(4.5,4.5)</drawSize>
		</graphicData>
			<altitudeLayer>Building</altitudeLayer>
		<statBases>
		  <WorkToBuild>1100</WorkToBuild>
		  <MaxHitPoints>600</MaxHitPoints>
		  <Beauty>50</Beauty>
		  <MeditationFocusStrength>0.38</MeditationFocusStrength>
		  <Mass>250</Mass>
		  <Flammability>0</Flammability>
		</statBases>
		<costStuffCount>450</costStuffCount>
		<rotatable>false</rotatable>
		<scatterableOnMapGen>false</scatterableOnMapGen>
		<useHitPoints>True</useHitPoints>
		<designationCategory>Ideology</designationCategory>
		<uiOrder>2000</uiOrder>
		<passability>Standable</passability>
		<building>
		  <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
		  <ai_chillDestination>false</ai_chillDestination>
		  <wakeDormantPawnsOnConstruction>false</wakeDormantPawnsOnConstruction>
		  <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
		  <buildingTags>
			<li>RitualFocus</li>
		  </buildingTags>
		  <relatedBuildCommands>
			<li>Lectern</li>
			<li>KneelPillow</li>
			<li>KneelSheet</li>
		  </relatedBuildCommands>
		  <paintable>true</paintable>
		</building>
		<stuffCategories>
			<li>Stony</li>
			<li>Metallic</li>
		  </stuffCategories>
		<size>(3,3)</size>
		<uiIconScale>0.80</uiIconScale>

		<placeWorkers Inherit="False">
			<li>PlaceWorker_RitualFocusNoArrow</li>
			<li>PlaceWorker_PreventInteractionSpotOverlap</li>
		  </placeWorkers>
		  <drawPlaceWorkersWhileSelected>True</drawPlaceWorkersWhileSelected>
		  <comps>
			<li Class="CompProperties_MeditationFocus">
			  <statDef>MeditationFocusStrength</statDef>
			  <focusTypes>
				<li>Artistic</li>
			  </focusTypes>
			</li>
		  </comps>
	  </ThingDef>

