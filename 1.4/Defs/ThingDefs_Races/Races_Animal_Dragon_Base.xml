          <li>(20,0)</li>
          <li>(40,25)</li>
          <li>(50,30)</li>
          <li>(200,100)</li>
          <li>(700,100)</li>
          <li>(1000,60</li>
          <li>(1200,40)</li>
          <li>(1500,20)</li>
          <li>(1800,12)</li>
          <li>(2000,0)</li>
        </points>
      </ageGenerationCurve>
    </race>
    <tradeTags>
      <li>AnimalExotic</li>
    </tradeTags>
    <butcherProducts>
      <DragonHorn>1</DragonHorn>
    </butcherProducts>
    <modExtensions>
      <li Class="DD.BreedingPoolExtension">
        <pool>CommonDragons</pool>
      </li>
      <li Class="DD.GenusMarkerExtension">
        <genus>DraconicCommon</genus>
      </li>

    </modExtensions>
