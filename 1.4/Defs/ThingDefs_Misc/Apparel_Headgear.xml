	</ThingDef>
  
<!-- ============Dragon Crown============= -->
  <ThingDef ParentName="ArmorHelmetMakeableBase">
		<defName>DD_Apparel_DragonCrown</defName>
		<label>dragon crown</label>
		<description>A crown made out of carved dragon horns and metal. Greatly improves social impact.</description>
